<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">Signup</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="email-signup">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
          <div class="form-group">
        <label for="name-signup">Full Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="address-signup">Address:</label>
        <input class="form-input" type="text" id="address-signup" />
      </div>
      <div class="form-group">
        <label for="city-signup">City:</label>
        <input class="form-input" type="text" id="city-signup" />
      </div>
      <div class="form-group">
        <label for="state-signup">State:</label>
        <input class="form-input" type="text" id="state-signup" />
      </div>
      <div class="form-group">
        <label for="zip-signup">Zip:</label>
        <input class="form-input" type="text" id="zip-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/homeowner-login.js"></script>
<script src="/js/homeowner-signup.js"></script>